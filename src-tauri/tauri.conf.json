{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:7146",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "atcc-workshop-uibuilder-tauri-pl",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "app": {
        "all": true, // enable all app APIs
        "show": true,
        "hide": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "net.ciih.atcc-workshop",
      "targets": ["msi"],
      "windows": {
        "webviewInstallMode": {
          "type": "offlineInstaller"
        },
        "wix": {
          "language": "zh-CN"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "安特磁材配料控制系统",
        "width": 1024,
        "height": 768
      }
    ]
  }
}
